import java.util.Scanner;
public class Consoante {
public static void main(String[] args) {
Scanner sc = new Scanner(System.in);
System.out.println("Escreva uma palavra de no max 10
caracteres: ");
String palavra = sc.nextLine();
if(palavra.length() > 10) {
System.out.println(palavra + " possui mais de 10

caracteres");

while(palavra.length() > 10) {
System.out.println("Digite uma palavra com um

tamanho valido: ");

palavra = sc.nextLine();
}
}
palavra = palavra.toLowerCase();
int contadorConsoantes = 0;
String consoantesEncontradas = "";
for(int i = 0; i < palavra.length(); i++) {
char c = palavra.charAt(i);

if(Character.isLetter(c) &&

c != 'a' && c != 'e' && c != 'i' && c != 'o' &&

c != 'u') {

contadorConsoantes++;
consoantesEncontradas += c + " ";
}
}
System.out.println("\nPalavra analisada: " + palavra);
System.out.println("Total de consoantes: " +
contadorConsoantes);
System.out.println("Consoantes encontradas: " +
consoantesEncontradas);
sc.close();
}
}
